datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_URL")
    directUrl         = env("DIRECT_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

model User {
    id    Int     @id @default(autoincrement())
    email String  @unique
    name  String?
}

model Genre {
    id   Int    @id @default(autoincrement())
    name String
}

model Songs {
    id        Int       @id @default(autoincrement())
    name      String
    artist    String
    genre     String
    url       String
    title     String
    status    Boolean   @default(false)
    date_done DateTime?
}
